{% block tab_pages %}
<div class="row mt-5">
    <div class="tab-content" id="myTabContent">
        {% for tab in tabs %}
        <div class="tab-pane fade {% if request_uri == tab.href %} {{ 'show active' }} {% endif %}"
            id="{{ tab.innerHTML }}" role="tabpanel" aria-labelledby="{{ tab.innerHTML }}-tab">
            {{ tab.content }}
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}