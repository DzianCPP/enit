{% block content %}

{% use 'enit/carousel.html.twig' %}
{% use 'enit/usp.html.twig' %}
{% use 'enit/buy_button.html.twig' %}
{% use 'enit/bullet_points.html.twig' %}
{% use 'enit/offers.html.twig' %}

<div class="row mt-5">
    <div class="col col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xxl-6">
        {% block carousel %} {{ parent() }} {% endblock %}
    </div>

    <div class="col col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xxl-6">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xxl-12">
                {% block usp %} {{ parent() }} {% endblock %}
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xxl-12">
                {% block bullet_points %} {{ parent() }} {% endblock %}
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xxl-12">
                {% block buy_button %} {{ parent() }} {% endblock %}
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-xs-12 col-sm--12 col-md-12 col-lg-12 col-xxl-12">
        {% block offers %} {{ parent() }} {% endblock %}
    </div>
</div>
{% endblock %}